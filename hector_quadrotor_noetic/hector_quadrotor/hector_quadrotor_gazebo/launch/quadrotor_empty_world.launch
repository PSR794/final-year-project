<?xml version="1.0"?>

<launch>
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="turtlebot"  default="tbot"/>
  <arg name="quadrotor" default="drone"/>

  <arg name="turtlebot_x_pos" default="1.0"/>
  <arg name="turtlebot_y_pos" default="1.0"/>
  <arg name="turtlebot_z_pos" default=" 0.3"/>
  <!-- <arg name="tbot_yaw"   default=" 1.57"/> -->

<include file="$(find hector_gazebo_worlds)/launch/start.launch"/>

  <group ns = "$(arg turtlebot)">
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />

    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
      <param name="publish_frequency" type="double" value="50.0" />
      <param name="tf_prefix" value="$(arg turtlebot)" />
    </node>
    
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model $(arg turtlebot) -x $(arg turtlebot_x_pos) -y $(arg turtlebot_y_pos) -z $(arg turtlebot_z_pos) -param robot_description" />
  </group>

  <group ns = "$(arg quadrotor)">
  <include file="$(find hector_quadrotor_gazebo)/launch/spawn_quadrotor.launch" >
    <arg name="model" value="$(find hector_quadrotor_description)/urdf/quadrotor_with_asus_with_hokuyo_utm30lx.gazebo.xacro"/> 
    <arg name="tf_prefix" value="$(arg quadrotor)"/> 
  </include>
  </group>
<!-- <include file="$(find turtlebot3_teleop)/launch/spawn_quadrotor.launch" > -->
</launch>